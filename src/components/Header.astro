  <div class="flex justify-between p-4">
    <img
      src="/RideURegularFont.png"
      class="w-auto h-6 self-center cursor-pointer"
      alt="logo"
    />
    <ul class="flex justify-between max-sm:hidden align-middle gap-4">
      <a
        href="#ourHistory"
        class="font-semibold self-center cursor-pointer hover:text-purple-700"
      >
